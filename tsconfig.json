{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",   
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "baseUrl": ".",
      "types": ["vitest/globals"], 
      "paths": {
      "@/*": ["./*"]
     }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  